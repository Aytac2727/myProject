<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kitabchi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/category.css">
    <link rel="stylesheet" type="text/css" href="~/css/basket.css">
    <link rel="stylesheet" type="text/css" href="~/css/product.css">
    <link rel="stylesheet" type="text/css" href="~/font/stylesheet.css">
    <link href="~/uiSlider/nouislider.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="~/lib/rangeSlider/rangeslider.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <script src="https://kit.fontawesome.com/38bac47577.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- navbar start -->
    <header id="header">
        <div class="container">
            <nav class="nav-all navbar navbar-expand-xl navbar-light justify-content-between">
                <img src="~/home_image/kitap-logo-png.png" alt="">
                <a class="navbar-brand nav-br" href="/"> Kitabçı</a>
                <button class="navbar-toggler nav-tog" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-align-justify"></i>
                </button>
                <div class="nav-col collapse navbar-collapse flex-wrap justify-content-between" id="navbarNavAltMarkup">
                    <div class="col-xl-5">
                        <div class="navbar-nav nav-txt">
                            <a class="nav-item nav-link" target="_blank" href="/Products">Kateqoriyalar <span class="sr-only">(current)</span></a>
                            <a class="nav-item nav-link" href="#Endirim">Endirimdə olanlar</a>
                            <a class="nav-item nav-link" href="#ChoxSatilanlar">Çox satılanlar</a>
                        </div>
                    </div>
                    <div class="col-xl-2">
                        <form class="form-inline frm-in">
                            <input class="form-control mr-sm-2 frm-con" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-search my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                    <div class="col-xl-5 col-sm-12 text-right">
                        <div class="icons">
                            <a href=""><i class="fas fa-heart"></i></a>
                            <a href=""><i class="fas fa-address-book"></i> Daxil ol</a>
                            <a target="_blank" href="/Home/Basket"><i class="fas fa-shopping-bag"></i> 19.90 ₼</a>
                            <a class="pink-a" href="">Ödəniş et</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!-- navbar end -->

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- footer start-->
    <footer id="footer">
        <div class="container">
            <h5 class="logo">Kitabçı</h5>
            <div class="footer-content">
                <div class="row">
                    <div class="col-lg-2 col-4">
                        <div class="footer-inner">
                            <h6>kitabchi.az</h6>
                            <a href="">Hesabım</a><br>
                            <a href="">Səbətim</a><br>
                            <a href="">Bəyəndiklərim</a><br>
                            <a href="">Çatdırılma</a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-4">
                        <div class="footer-inner">
                            <h6>İnformasiya</h6>
                            <a href="">Haqqımızda</a><br>
                            <a href="">Çatdırılma şərtləri</a><br>
                            <a href="">Gizlilik şərtləri</a><br>
                            <a href="">Filiallarımız</a><br>
                            <a href="">Hədiyyə kuponları</a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-4">
                        <div class="footer-inner">
                            <h6>Müştəri xidməti</h6>
                            <a href="">Bizə yazın</a><br>
                            <a href="">Geri qaytarmalar</a><br>
                            <a href="">Sayt xəritəsi</a><br>
                            <a href="">Sifariş tarixçəsi</a><br>
                            <a href="">Qaydalar</a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-12 col-sm-6">
                        <div class="footer-inner in-2">
                            <h6>Bizimlə əlaqə</h6>
                            <span>Bakı, Dadaş Bünyadzadə 14A</span><br>
                            <a href="">office@kitabchi.az</a><br>
                            <a href="">+994 55 000 00 00</a><br>
                            <a href="">+994 51 000 00 00</a><br>
                        </div>
                    </div>
                    <div class="col-lg-3 col-12 col-sm-6">
                        <div class="footer-inner in-2">
                            <a href=""><i class="fab fa-facebook"></i></a>
                            <a href=""><i class="fab fa-instagram"></i></a>
                            <a href=""><i class="fab fa-pinterest-p"></i></a>
                            <a href=""><i class="fab fa-google-plus-g"></i></a>
                            <a href=""><i class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer end -->
    <!-- footer-card start -->
    <footer id="footer-card">
        <div class="container">
            <div class="card-content">
                <div class="row justify-content-lg-between justify-content-center">
                    <div class="col-lg-6 col-sm12">
                        <div class="card-inner">
                            Kitabchi.az © 2019 - 2020. Online kitab mağazası. Bütün hüquqlar qorunur.
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <div class="card-inner">
                            <img src="home_image/Mask Group 4.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- footer-card end -->

    <script src="~/lib/jquery/dist/jquery-3.5.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"
            integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/js/slick.min.js"></script>
    <script src="~/lib/rangeSlider/rangeslider.min.js"></script>
    <script src = "~/uiSlider/nouislider.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
